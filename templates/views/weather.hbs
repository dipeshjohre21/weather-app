                        </div>

                    </div>

                </div>
            </div>
</div>
</div>
    <!--footer -->
{{>footer}}
<script src="js/main.js"></script>
<script>
    const getCurrentDay = () => {
        let weekday = new Array(7);
        weekday[0] = "SUNday";
        weekday[1] = "Monday";
        weekday[2] = "Tuesday";
        weekday[3] = "Wedday";
        weekday[4] = "Thursday";
        weekday[5] = "friday";
        weekday[6] = "Saturday";

        let currentTime = new Date();
        days = weekday[currentTime.getDay()];
        let day = document.getElementById('day');
        day.innerText = days;
    };
    getCurrentDay();
</script>
    
</body>
</html>